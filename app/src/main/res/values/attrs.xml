<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SlashLayout">
        <attr name="slash_heightDiff" format="dimension"/>
        <attr name="slash_cornerRadius" format="dimension"/>
        <attr name="slash_shadowSize" format="dimension"/>
        <attr name="slash_shadowDepth" format="float"/>
        <attr name="slash_backgroundColor" format="color"/>
        <attr name="slash_eatTouchEvent" format="boolean"/>
        <attr name="slash_autoTopPadding" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="UpDownArrow">
        <attr name="upa_arrowWidth" format="dimension"/>
        <attr name="upa_arrowHeight" format="dimension"/>
        <attr name="upa_arrowThickness" format="dimension"/>
        <attr name="upa_arrowColor" format="color"/>
        <attr name="upa_arrowCurvature" format="float"/>
        <attr name="upa_breakStart" format="float"/>
        <attr name="upa_breakEnd" format="float"/>
        <attr name="upa_progress" format="float"/>
        <attr name="upa_isUpToDown" format="boolean"/>
        <attr name="upa_fitToViewSize" format="boolean"/>
        <attr name="upa_skipBreakTime" format="boolean"/>
        <attr name="upa_richDrawing" format="boolean"/>
        <attr name="upa_mode" format="enum">
            <enum name="flip" value="0"/>
            <enum name="cross" value="1"/>
        </attr>
    </declare-styleable>
    
    <declare-styleable name="DodgeBottomSheetBehavior">
        <attr name="dodge_revealFromLeftSide" format="boolean"/>
        <attr name="dodge_anchorTo" format="reference"/>
    </declare-styleable>

    <declare-styleable name="DependentBottomSheetBehavior">
        <attr name="behavior_belowOfOnExpanded" format="reference"/>
        <attr name="behavior_belowOfOnCollapsed" format="reference"/>
    </declare-styleable>
</resources>
