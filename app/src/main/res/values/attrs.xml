<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StackTabs">
        <attr name="tabTextStyle" format="reference"/>
        <attr name="tabIconStyle" format="reference"/>
        <attr name="tabBackground" format="reference"/>
        <attr name="startOffset" format="dimension"/>
        <attr name="endOffset" format="dimension"/>
        <attr name="tabTextFadeDuration" format="integer"/>
        <attr name="tabsSlideDuration" format="integer"/>
        <attr name="tabIconWidth" format="dimension"/>
        <attr name="tabTextWidth" format="dimension"/>
        <attr name="tabTextMinWidth" format="dimension"/>
        <attr name="tabTextMaxWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="KryptosTabLayout">
    </declare-styleable>

    <declare-styleable name="SlashLayout">
        <attr name="slash_heightDiff" format="dimension"/>
        <attr name="slash_cornerRadius" format="dimension"/>
        <attr name="slash_shadowSize" format="dimension"/>
        <attr name="slash_shadowDepth" format="float"/>
        <attr name="slash_backgroundColor" format="color"/>
        <attr name="slash_eatTouchEvent" format="boolean"/>
    </declare-styleable>
</resources>
