<?xml version="1.0" encoding="utf-8"?>
<com.hayashibambi.kryptos.bottomsheetfamilylayout.BottomSheetFamilyLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/root_layout"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
        app:layout_hostBottomSheet="@id/sheet">

    <TextView android:layout_width="match_parent"
              android:layout_height="56dp"
              android:text="@string/app_name"
              android:textSize="18sp"
              android:paddingStart="24dp"
              android:textColor="#ffffff"
              android:paddingEnd="0dp"
              android:id="@+id/title_bar"
              android:gravity="center_vertical"
              android:background="#ff00ff"
              app:layout_behavior="@string/linkage_fade_behavior"
    app:behavior_alphaOnDependencyCollapsed="100%"
    app:behavior_alphaOnDependencyExpanded="30%"
    app:behavior_alphaOnDependencyHidden="50%"/>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent"
    android:id="@+id/sheet"
    app:layout_behavior="@string/family_bottom_sheet_behavior"
    android:background="@color/colorAccent"
    app:behavior_peekHeight="200dp"
    app:behavior_hideable="true"/>

</com.hayashibambi.kryptos.bottomsheetfamilylayout.BottomSheetFamilyLayout>