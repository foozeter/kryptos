<?xml version="1.0" encoding="utf-8"?>
<com.hayashibambi.kryptos.SpecialCoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity"
        android:orientation="vertical"
        android:clipChildren="false"
        android:id="@+id/root_layout"
        android:background="@color/colorPrimary">

    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
    android:text="@string/large_text"
    android:textSize="18sp"
    android:textColor="#ffffff"
    android:padding="24dp"/>

    <FrameLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="@color/colorAccent"
                 app:layout_behavior="@string/advanced_bttom_sheet_behavior"
                 app:absb_belowOfOnExpanded="@+id/title_bar"
            app:absb_fadeOutSheetOnDragging="true"
            app:absb_defaultState="collapsed"
            app:absb_enableOverDragging="true"
    app:behavior_peekHeight="112dp"/>

    <TextView android:layout_width="match_parent" android:layout_height="56dp"
    android:text="@string/app_name"
    android:textSize="18sp"
    android:paddingStart="24dp"
    android:textColor="#ffffff"
    android:paddingEnd="0dp"
    android:id="@+id/title_bar"
    android:gravity="center_vertical"
    android:background="#ff00ff"/>

    <TextView android:layout_width="match_parent" android:layout_height="56dp"
              android:text="collapse"
              android:textSize="18sp"
              android:paddingStart="24dp"
              android:textColor="#ffffff"
              android:paddingEnd="0dp"
              android:visibility="invisible"
              android:id="@+id/title_bar_2"
              android:gravity="center_vertical"
              android:background="#ff00ff"
    android:layout_gravity="center"/>

    <TextView android:layout_width="match_parent" android:layout_height="56dp"
              android:text="menu item 1"
              android:textSize="18sp"
              android:paddingStart="24dp"
              android:textColor="#ffffff"
              android:layout_marginStart="88dp"
              android:paddingEnd="0dp"
              android:id="@+id/menu_item1"
              android:gravity="center_vertical"
              android:background="#ff0000"
    android:layout_marginTop="250dp"
    app:layout_behavior="@string/whack_a_mole_behavior"
              app:wam_anchorBottomSheet="@+id/bottom_sheet"
    app:wam_detectionRange="200dp"/>

    <TextView android:layout_width="match_parent" android:layout_height="56dp"
              android:text="menu item 1"
              android:textSize="18sp"
              android:paddingStart="24dp"
              android:textColor="#ffffff"
              android:layout_marginStart="88dp"
              android:paddingEnd="0dp"
              android:id="@+id/menu_item2"
              android:gravity="center_vertical"
              android:background="#ff0000"
              android:layout_marginTop="180dp"
              app:layout_behavior="@string/whack_a_mole_behavior"
              app:wam_anchorBottomSheet="@+id/bottom_sheet"
              app:wam_detectionRange="256dp"/>

    <TextView android:layout_width="match_parent" android:layout_height="56dp"
              android:text="menu item 1"
              android:textSize="18sp"
              android:paddingStart="24dp"
              android:textColor="#ffffff"
              android:layout_marginStart="88dp"
              android:paddingEnd="0dp"
              android:id="@+id/menu_item3"
              android:gravity="center_vertical"
              android:background="#ff0000"
              android:layout_marginTop="110dp"
              app:layout_behavior="@string/whack_a_mole_behavior"
              app:wam_anchorBottomSheet="@+id/bottom_sheet"
              app:wam_detectionRange="256dp"/>

    <TextView android:layout_width="match_parent" android:layout_height="56dp"
              android:text="menu item 1"
              android:textSize="18sp"
              android:paddingStart="24dp"
              android:textColor="#ffffff"
              android:layout_marginStart="88dp"
              android:paddingEnd="0dp"
              android:id="@+id/menu_item4"
              android:gravity="center_vertical"
              android:background="#ff0000"
              android:layout_marginTop="40dp"
              app:layout_behavior="@string/whack_a_mole_behavior"
              app:wam_anchorBottomSheet="@+id/bottom_sheet"
              app:wam_detectionRange="256dp"/>


</com.hayashibambi.kryptos.SpecialCoordinatorLayout>
