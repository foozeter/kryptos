<?xml version="1.0" encoding="utf-8"?>
<com.hayashibambi.kryptos.SpecialCoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity"
        android:orientation="vertical"
        android:clipChildren="false"
        android:id="@+id/root_layout"
        android:background="@color/colorPrimary">

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="@color/colorAccent"
                 app:layout_behavior="@string/dependent_bttom_sheet_behavior"
                 app:behavior_belowOfOnExpanded="@+id/title_bar"
                 app:behavior_belowOfOnCollapsed="@+id/title_bar_2"
                 app:behavior_hideable="true"/>

    <TextView android:layout_width="match_parent" android:layout_height="56dp"
    android:text="@string/app_name"
    android:textSize="18sp"
    android:paddingStart="24dp"
    android:textColor="#ffffff"
    android:paddingEnd="0dp"
    android:id="@+id/title_bar"
    android:gravity="center_vertical"
    android:background="#ff00ff"/>

    <TextView android:layout_width="match_parent" android:layout_height="56dp"
              android:text="collapse"
              android:textSize="18sp"
              android:paddingStart="24dp"
              android:textColor="#ffffff"
              android:paddingEnd="0dp"
              android:id="@+id/title_bar_2"
              android:gravity="center_vertical"
              android:background="#ff00ff"
    android:layout_gravity="center"/>

</com.hayashibambi.kryptos.SpecialCoordinatorLayout>
