<?xml version="1.0" encoding="utf-8"?>
<com.hayashibambi.kryptos.SlashCoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity"
        android:orientation="vertical"
        android:clipChildren="false"
        android:id="@+id/root_layout"
        android:background="@color/colorPrimary">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="56dp"
                      android:orientation="horizontal">
            <ImageView android:layout_width="56dp"
                       android:layout_height="56dp"
                       android:src="@drawable/ic_donuts"
                       android:padding="16dp"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="56dp"
                      android:text="collections"
                      android:gravity="center_vertical"
                      android:textSize="20sp"
                      android:textColor="#ffffff"
                      android:layout_marginStart="16dp"/>

        </LinearLayout>

        <include
                android:id="@+id/menu"
                layout="@layout/menu_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.hayashibambi.kryptos.ShrinkFrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:behavior_hideable="false"
            app:layout_behavior="@string/bottom_sheet_behavior"
            app:shrink_amountOfHeight="@dimen/home_title_bar_height"
            android:background="@drawable/home_content_background"/>

    <com.hayashibambi.kryptos.SlashLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    app:slash_heightDiff="100dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_peekHeight="100dp"
    app:slash_autoTopPadding="true">

        <View android:layout_width="80dp" android:layout_height="20dp"
        android:background="@color/colorPrimary"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="#ff0000"
        android:padding="8dp"
        android:text="action long name"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="18sp"
        android:drawableStart="@drawable/ic_donuts"
        android:drawableTint="@color/colorPrimary"
        android:drawablePadding="12dp"/>

    </com.hayashibambi.kryptos.SlashLayout>

</com.hayashibambi.kryptos.SlashCoordinatorLayout>
