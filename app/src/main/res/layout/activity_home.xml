<?xml version="1.0" encoding="utf-8"?>
<com.hayashibambi.kryptos.SpecialCoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity"
        android:orientation="vertical"
        android:clipChildren="false"
        android:id="@+id/root_layout"
        android:background="@color/colorPrimary">

    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
    android:text="@string/large_text"
    android:textSize="18sp"
    android:textColor="#ffffff"
    android:padding="24dp"/>

    <FrameLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="@color/colorAccent"
                 app:layout_behavior="@string/enhanced_bottom_sheet_behavior"
    app:behavior_layoutBelowOf="@id/title_bar"
    app:behavior_defaultState="expanded"/>

    <TextView android:layout_width="match_parent" android:layout_height="56dp"
    android:text="@string/app_name"
    android:textSize="18sp"
    android:paddingStart="24dp"
    android:textColor="#ffffff"
    android:paddingEnd="0dp"
    android:id="@+id/title_bar"
    android:gravity="center_vertical"
    android:background="#ff00ff"/>

    <TextView android:layout_width="match_parent" android:layout_height="56dp"
              android:text="peek to below of this view"
              android:textSize="18sp"
              android:paddingStart="24dp"
              android:layout_marginTop="300dp"
              android:textColor="#ffffff"
              android:paddingEnd="0dp"
              android:id="@+id/middle_title"
              android:gravity="center_vertical"
              android:background="#ff00ff"/>

</com.hayashibambi.kryptos.SpecialCoordinatorLayout>
