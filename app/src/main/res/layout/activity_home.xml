<?xml version="1.0" encoding="utf-8"?>
<com.hayashibambi.kryptos.SlashCoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity"
android:orientation="vertical"
android:clipChildren="false">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:text="@string/large_text"
                android:textColor="#000000"
                android:textSize="14sp"/>

    </androidx.core.widget.NestedScrollView>


    <com.hayashibambi.kryptos.SlashLayout
            android:id="@+id/slash_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    app:slash_backgroundColor="@color/colorAccent"
            app:layout_behavior="@string/bottom_sheet_behavior"
            app:behavior_hideable="false"
            app:behavior_peekHeight="300dp"
    app:slash_heightDiff="200dp"
    app:slash_eatTouchEvent="true">

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="un-clickable"
        android:layout_gravity="end"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="clickable"
                android:layout_gravity="center"/>
    </com.hayashibambi.kryptos.SlashLayout>
</com.hayashibambi.kryptos.SlashCoordinatorLayout>
