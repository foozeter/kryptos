<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <LinearLayout android:id="@+id/tab1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
            <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@mipmap/ic_launcher"/>
            <TextView android:id="@+id/title1" android:layout_width="wrap_content" android:layout_height="40dp" android:text="Collections" android:gravity="center" android:textStyle="bold" android:textColor="#000000" android:paddingStart="8dp" android:paddingEnd="8dp"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/tab2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
            <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@mipmap/ic_launcher"/>
            <TextView android:visibility="gone" android:id="@+id/title2" android:layout_width="wrap_content" android:layout_height="40dp" android:text="Collections" android:gravity="center" android:textStyle="bold" android:textColor="#000000" android:paddingStart="8dp" android:paddingEnd="8dp"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/tab3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
            <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@mipmap/ic_launcher"/>
            <TextView android:visibility="gone" android:id="@+id/title3" android:layout_width="wrap_content" android:layout_height="40dp" android:text="Collections" android:gravity="center" android:textStyle="bold" android:textColor="#000000" android:paddingStart="8dp" android:paddingEnd="8dp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
